<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-signin' } ) do |f| %>
	<h2 class="form-signin-heading">Please sign in</h2>
  <%= f.text_field :username, :autofocus => true, class: 'input-block-level', :placeholder => "username" %>

  <%= f.password_field :password, class: 'input-block-level', :placeholder => "password" %>

  <% if devise_mapping.rememberable? -%>
    <label class="remember me"><%= f.check_box :remember_me %>Remember Me</label>
  <% end -%>

<%= f.submit "Sign in", class: 'btn btn-large btn-primary' %></div>
<% end %>
